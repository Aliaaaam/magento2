{
  "compilerOptions": {
    "declaration": true,
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "Node",
    "lib": [
      "ESNext",
      "ESNext.AsyncIterable",
      "DOM"
    ],
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "allowJs": true,
    "sourceMap": true,
    "strict": true,
    "noEmit": true,
    "baseUrl": ".",
    "paths": {
      "~/*": [
        "./*"
      ],
      "@/*": [
        "./*"
      ]
    },
    "types": [
      "@types/node",
      "@nuxt/types",
      "nuxt-i18n",
      "@types/jest",
      "@types/testing-library__jest-dom"
    ],
    "resolveJsonModule": true,
    "rootDir": "./",
    "declarationDir": "./lib",
    "importHelpers": true,
    "allowSyntheticDefaultImports": true
  },
  "include": [
    "./jest-setup.ts"
  ],
  "exclude": [
    "node_modules",
    "tests/**/*.*"
  ]
}
